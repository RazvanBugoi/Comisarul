{
  "name": "Comisarul",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "tabs",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.comisarul.ro/"],
      "run_at": "document_idle",
      "js": ["background.js"]
    },
      {
        "matches": ["https://*.comisarul.ro/*"],
        "run_at": "document_idle",
        "js": ["articles.js"]
      }
  ],
  "browser_action": {
    "default_title": "Comisarul",
    "default_icon": {
      "64": "images/logo.png"
  }
},
  "manifest_version": 2
}